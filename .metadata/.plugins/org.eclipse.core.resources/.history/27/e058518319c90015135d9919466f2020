package gunbattle;

import java.applet.Applet;
import java.awt.Color;
import java.awt.Component;
import java.awt.FlowLayout;
import java.awt.Font;
import java.util.Random;
import java.util.Vector;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.Point;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

import javax.print.DocFlavor.URL;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
public class GrafGunBattle extends JPanel	{
	
	 Image fold;
	 Image harcos1;
	 Image harcos2;
	
	int gomb=0;
	int xeger=0;
	int yeger=0;
	int xhatter=0;
	int gombelenged=0;
	int harcos=0;
	
	
	
	
	public GrafGunBattle() {
		ImageIcon i = new ImageIcon (getClass().getResource("föld.png"));
		fold=i.getImage();
		
		ImageIcon a = new ImageIcon (getClass().getResource("harcos1.png"));
		harcos1=a.getImage();
		
		ImageIcon b = new ImageIcon (getClass().getResource("harcos2.png"));
		harcos2=b.getImage();
		
		
		
		new Thread(new Runnable() { 
					public void run() {
						while (true) {
							if (getWidth() != 0){
									
																
								if(gomb==39){
									harcos=harcos+1;
									xhatter=xhatter+1;
								}
								
								
								if(gomb==37){
									harcos=harcos+1;
									xhatter=xhatter-1;
								}
								
								if(xhatter<10){
									xhatter=10;	
								}
								
								
								if(xhatter>9000){
									xhatter=9000;	
								}
								
								if(gombelenged>0){
									gomb=0;
									gombelenged=0;
								}
								if(harcos==40){
									harcos=0;
								}
								
							}	
							repaint(); 
							try {
								Thread.sleep(3); 
							} catch (InterruptedException e) {
								e.printStackTrace();
							}
							}
						
						}
				}).start();
		}
	
	
	

	//kijelzés
	
		
		//színek
	
	
	public void paintComponent(Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		
		for(int i=-1; i<200; i=i+1){
		g2.drawImage(fold, -1*(xhatter+(i*50))+9900, 550, 50, 50, null);
		
		if(harcos>20){
		
		g2.drawImage(harcos1, 100, 400, 80, 170, null);
		}else{
		g2.drawImage(harcos2, 100, 400, 80, 170,  null);
		}
	}
}
	}
