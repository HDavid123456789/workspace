package uj;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import javax.swing.JPanel;
public class Graf extends JPanel	{
	//grafika számolás
	
	int kattx; int katty;
	int gomb=0;
	int gombelenged=0;
	int x; int y;
	int xa=0; int ya=0;
	int xmozgas; int ymozgas;
	int szamlalo[]=new int[75];
	int sor=0;
	String ertek = ""
+ "***************/"
+ "******00*******/"
+ "***000000000***/"
+ "**00000000000**/"
+ "*0000000000000*/"; 
	String jelek="0*/";



	public Graf() {
		
		
		new Thread(new Runnable() { 
					public void run() {
						while (true) {
							if (getWidth() != 0){
								
								if(gomb==27){
									// program bezárása
									System.exit(0);
								}
								
							}
							repaint(); 
							try {
								Thread.sleep(1); 
							} catch (InterruptedException e) {
								e.printStackTrace();
							}
						}
					}
				}).start();
	}
	
	
	
	public void paintComponent(Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		g2.setColor(Color.white);
		g2.fillRect(0, 0, x, y);
		
		g2.setColor(Color.gray);
		for(int i=0; i<szamlalo.length; i=i+1){
			if(ertek.charAt(i)==jelek.charAt(1)){
				g2.fillRect(i*x/15-10, sor, x/15, y/10);
			}
			if(ertek.charAt(i)==jelek.charAt(2)){
				sor=sor+1;
			}
			sor=0;
		}
		
			g2.setColor(Color.black);
			g2.fillOval(xmozgas, ymozgas, 20, 20);
}
	}
