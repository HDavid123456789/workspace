package agykesleltetes;
import java.util.Random;
import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JPanel;
public class AgykesleltetesGraf extends JPanel	{
	int szam=0;
	
	int egerf;
	int gomb=0; int gomb2;
	int egerx=0; int egery=0;
	int xa; int ya;
	int gorgo;
	int egergomb;
	int x; int y;
	
	int ido=0;
	boolean katt=false;
	
	public AgykesleltetesGraf() {
		
		new Thread(new Runnable() { 
					public void run() {
						while (true) {
							if (getWidth() != 0){
								if(egerx==0){}else{
									ido=0;
									egerx=0; egery=0;
								}
									ido=ido+1;
								
								if(ido>100){katt=true;}else{katt=false;}
								
								if(gomb==27){System.exit(0);}
								
							}
							repaint(); 
							try {
								Thread.sleep(1); 
							} catch (InterruptedException e) {
								e.printStackTrace();
							}
						}
					}
				}).start();
	}
	
	
	

	//kijelzés
	
		
		//színek
	
	
	public void paintComponent(Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		g2.setColor(Color.white);
		g2.fillRect(0, 0, x, y);
		if(katt){
		g2.setColor(Color.black);
		g2.fillOval(xa,ya,x/100,x/100);
		}else{
			g2.setColor(Color.red);
			g2.fillOval(xa,ya,x/10,x/10);
		}
	}
	}
